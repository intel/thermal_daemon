<?xml version="1.0"?> <!--*-nxml-*-->
<!DOCTYPE busconfig PUBLIC "-//freedesktop//DTD D-BUS Bus Configuration 1.0//EN"
        "http://www.freedesktop.org/standards/dbus/1.0/busconfig.dtd">

<busconfig>

        <policy user="root">
                <allow own="org.freedesktop.thermald"/>
                <allow send_destination="org.freedesktop.thermald"/>
                <allow receive_sender="org.freedesktop.thermald"/>
        </policy>

        <!-- Only allow members of the @dbusservicepowergrp@ group to communicate
             with the daemon -->
        <policy context="default">
                <deny send_destination="org.freedesktop.thermald"/>
                <allow receive_sender="org.freedesktop.thermald"/>
        </policy>
        <policy group="@dbusservicepowergrp@">
                <allow send_destination="org.freedesktop.thermald"/>
                <allow receive_sender="org.freedesktop.thermald"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="SetCurrentPreference"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="SetUserMaxTemperature"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="SetUserPassiveTemperature"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="AddSensor"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="AddVirtualSensor"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="AddZonePassive"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="DeleteZone"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="SetZoneStatus"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="AddTripPoint"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="DeleteTripPoint"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="AddCoolingDevice"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="UpdateCoolingDevice"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="DisableCoolingDevice"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="Reinit"/>

                <deny send_destination="org.freedesktop.thermald"
                send_member="Terminate"/>

        </policy>

</busconfig>
